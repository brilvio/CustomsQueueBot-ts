{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2016"],
    "paths": {
      "*": ["src/*"],
      "config/*": ["src/config/*"]
    },
    "rootDir": "./src",
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
